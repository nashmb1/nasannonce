{% extends "NASUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <form action="{{ path("fos_user_security_check") }}" method="post"  class ="well">
            <h3>Connectez-vous à labary</h3>
            Vous n'êtes pas encore inscrit? <a href="{{path("fos_user_registration_register")}}">Inscrivez-vous</a>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="form-group">
                <label for="username">{{ 'Identifiant'|trans }}</label><br>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <label for="password">{{ 'Mot de passe'|trans }}</label><br>
                <input type="password" id="password" name="_password" required="required" />
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
            </div>
            <input type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" class="btn btn-primary"/>
    </form>
    </div>
    <div class="col-md-3"></div>
    </div>
{% endblock fos_user_content %}
