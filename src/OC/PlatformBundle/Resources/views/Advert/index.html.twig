{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #} {%
extends "OCPlatformBundle::layout.html.twig" %} {% block title %}
Accueil - {{ parent() }} {% endblock %} {% block ocplatform_body %}

<h2>Liste des annonces</h2>

<ul>
	{% for advert in listAdverts %}

	<li class="row form-control form-group prezlist">
		<div class="col-md-2">
			{% if advert.image is not null %} 
			<img src="{{  asset(advert.image.webPath)}}" alt="{{ advert.image.alt }}" class="img-thumbnail prezimg">
			{% endif %}
		</div>
		<div class="col-md-8">
			<a href="{{ path('oc_platform_view', {'id': advert.id}) }}"> {{
				advert.title }} </a> 
				<br/>
				{{ advert.author }},
		</div>
		<div class="col-md-2">{{ advert.date|date('d/m/Y') }}</div>
	</li> {% else %}
	<li>Pas (encore !) d'annonces</li> {% endfor %}
</ul>

<ul class="pagination">
	{# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs
	entre a et b #} {% for p in range(1, nbPages) %}
	<li {% if p == page %} class="active" {% endif %}><a
		href="{{ path('oc_platform_home', {'page': p}) }}">{{ p }}</a></li> {%
	endfor %}
</ul>

{% endblock %}
